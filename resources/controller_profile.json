{
  "jsonid": "input_profile",
  "controller_type": "Amfitrack_controller",
  "device_class": "TrackedDeviceClass_Controller",
  "resource_root": "{Amfitrack}/resources",
  "driver_name": "amfitrack",
  "input_bindingui_mode": "controller_handed",
  "should_show_binding_errors": true,
  "input_bindingui_left": {
    "image": "{Amfitrack}/resources/icons/amfitrack_controller_left.svg"
  },
  "input_bindingui_right": {
    "image": "{Amfitrack}/resources/icons/amfitrack_controller_right.svg"
  },
  "input_source": {
    "/pose/raw": {
      "type": "pose",
      "binding_image_point": [ 0, 0 ]
    },
    "/input/a": {
      "type": "button",
      "click": true,
      "touch": true,
      "binding_image_point": [ 0, 0 ]
    },
    "/input/b": {
      "type": "button",
      "click": true,
      "touch": true,
      "binding_image_point": [ 0, 0 ]
    },
    "/input/trigger": {
      "type": "trigger",
      "click": true,
      "touch": true,
      "binding_image_point": [ 0, 0 ]
    }
  }
}