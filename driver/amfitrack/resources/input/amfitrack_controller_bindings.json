{
    "controller_type": "amfitrack_controller",
    "bindings": {
        "/actions/default": {
            "sources": {
                "/input/trigger": {
                    "output": "/actions/default/in/trigger"
                },
                "/input/a": {
                    "output": "/actions/default/in/grip"
                },
                "/input/b": {
                    "output": "/actions/default/in/grip"
                },
                "/pose/raw": {
                    "output": "/actions/default/in/pose"
                },
                "/output/haptic": {
                    "output": "/actions/default/out/haptic"
                }
            }
        }
    },
    "legacy_binding": "amfitrack_legacy_bindings.json"
}
